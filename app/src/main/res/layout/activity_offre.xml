<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="#fff" />

        <Button
            android:id="@+id/listcmt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="600dp"
            android:layout_marginBottom="200dp"
            android:background="@drawable/back1"
            android:text="Consulter les commentaires"
            android:textColor="#fff"
            android:textSize="16dp">
        </Button>

        <!-- <TextView
            android:id="@+id/input_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />  -->

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#08E8F1"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"/>

        <TextView
            android:id="@+id/titre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Offre Spécial"
            android:textColor="#08E8F1"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="15"
            />


        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Détails de l'offre ......"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="15"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:scrollbarSize="19dp"
            android:layout_margin="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="600dp"
            android:layout_marginBottom="200dp"
            android:src="@drawable/profile"


            />



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="260dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/like"
                android:layout_width="69dp"
                android:layout_height="34dp"
                android:layout_marginStart="13dp"
                android:layout_marginLeft="90dp"
                android:src="@drawable/like">
            </ImageView>

            <ImageView
                android:id="@+id/comment"
                android:layout_width="69dp"
                android:layout_height="34dp"
                android:layout_marginStart="13dp"
                android:layout_marginLeft="90dp"
                android:src="@drawable/comment">
            </ImageView>

            <ImageView
                android:id="@+id/share"
                android:layout_width="69dp"
                android:layout_height="34dp"
                android:layout_marginStart="13dp"
                android:layout_marginLeft="90dp"
                android:src="@drawable/share">
            </ImageView>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>








