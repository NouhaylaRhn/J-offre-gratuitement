<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Statistiques.StatistiquesFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/app_bar"
        style="@style/Widget.project.Toolbar"
        app:titleTextColor="@color/blanc_c"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:paddingStart="12dp"
        android:paddingLeft="12dp"
        android:paddingEnd="12dp"
        android:paddingRight="12dp"
        app:contentInsetStart="0dp"
        app:navigationIcon="@drawable/project_menu"
        app:title="@string/app_name"
        app:subtitle="Statistiques"
        app:subtitleTextColor="@color/blanc_c"/>

    <ScrollView
        android:id="@+id/statistics"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:background="@color/offreGridBackgroundColor"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingHorizontal="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/bg_ripple">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/colorP"
                android:text=" Nombre d'offres par type"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/nombre_total_offres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:text="TextView" />

        </LinearLayout>

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/statistiques_offres"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginVertical="15dp"
            android:background="@drawable/bg_ripple">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/colorP"
                android:text=" Nombre de bénéficiaires par type"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/nombre_total_benif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:text="TextView" />

        </LinearLayout>

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/statistiques"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical" />

</LinearLayout>
</ScrollView>

